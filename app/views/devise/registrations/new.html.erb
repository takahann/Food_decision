<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
      <h2 class="registration-headline">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :名前 %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :Eメールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :もう一度パスワードを入力してください %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.submit "アカウントを作成", class: "btn bg-primary btn-block" %>
          </div>
        </div>
      <% end %>
        <div class="form-group col-xs-12 col-sm-12 col-md-12">
          <div class="col-xs-7 col-sm-7 col-md-7 col-xs-offset-3">
            アカウントをお持ちの方<%= link_to 'ログイン', new_user_session_path %>
          </div>
        </div>
    </div>
  </div>
</div>