<div class="container">
  <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="session-tab" data-toggle="tab" href="#session" role="tab" aria-controls="session" aria-selected="true">ログイン</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="registratio-tab" data-toggle="tab" href="#registratio" role="tab" aria-controls="registratio" aria-selected="false">新規登録</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="session" role="tabpanel" aria-labelledby="session-tab">
      <div class="container">
        <div class="row">
          <h2 class="registration-headline">ログイン</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :Eメールアドレス %><br />
            <%= f.email_field :email, autofocus: true, :placeholder => "Eメールアドレス", autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "current-password", class: "form-control form-control-lg" %>
          </div>
          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.submit "ログイン", class: "btn bg-primary btn-block" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="registratio" role="tabpanel" aria-labelledby="registratio-tab">
      <div class="container">
        <div class="row">
          <h2 class="registration-headline">新規登録</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :名前 %><br />
            <%= f.text_field :name, autofocus: true, :placeholder => "2文字以上20文字未満", autocomplete: "name", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :Eメールアドレス %><br />
            <%= f.email_field :email, autofocus: true, :placeholder => "Eメールアドレス", autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, :placeholder => "パスワード6文字以上", autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.label :もう一度パスワードを入力してください %><br />
            <%= f.password_field :password_confirmation, :placeholder => "もう一度パスワードを入力してください", autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>

          <div class="form-group col-xs-12 col-sm-12 col-md-12">
            <%= f.submit "アカウントを作成", class: "btn bg-primary btn-block" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>