<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-7 col-md-offset-2">
      <h2>ユーザー編集</h2>
      <%= form_for @user do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="row">
          <div class="form-group col-xs-12">
            <%= f.label :ユーザーネーム %>
            <%= f.text_field :name, autofocus: true, :placeholder => "2文字以上20文字未満", autocomplete: "name", class: "form-control form-control-lg" %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-12">
            <%= f.label :Eメールアドレス %>
            <%= f.text_field :email, autofocus: true, :placeholder => "Eメールアドレス", autocomplete: "email", class: "form-control form-control-lg" %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-12">
            <%= f.label :紹介文 %>
            <%= f.text_area :introduction, autofocus: true, :placeholder => "100文字以内", autocomplete: "introduction", class: "form-control form-control-lg" %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-12">
            <%= f.label :プロフィール画像 %>
            <%= f.attachment_field :profile_image %>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-xs-12">
            <%= f.submit "更新する", class: "btn bg-primary btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </dic>
</div>
