<% @recipes.each do |recipe| %>
  <%= link_to recipe_path(recipe) do %>
    <%= attachment_image_tag recipe, :image, :fill, 300, 300 %>
  <% end %>
  <%= link_to user_path(recipe.user.id) do %>
    <%= attachment_image_tag recipe.user, :profile_image, :fill, 100, 100, fallback: "no_image.png", size: "100x100"%>
  <% end %>

  <%= recipe.user.name %>
  <%= recipe.updated_at.strftime("%Y-%m-%d")%>更新
  <%= recipe.title %>
<% end %>