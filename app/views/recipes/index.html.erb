<div class="container">
  <div class="row">
    <h1>レシピ一覧</h1>
	<% @recipes.each do |recipe| %>
	<div class="col-xs-6 col-sm-4 col-md-3">
			<div class="recipe-list">
				<%= link_to recipe_path(recipe) do %>
				  <%= attachment_image_tag recipe, :image, class: "img-fluid mw-100", width: 350, height: 250 %>
				<% end %>
				<ul>
				  <li><%= render 'recipes/tag_list', tag_list: recipe.tag_list %></li>
				  <li><%= recipe.title %></li>
				  <li id="star-rate-<%= recipe.id %>">評価：</li>
				  <script>
					  $('#star-rate-<%= recipe.id %>').raty({
					    size: 36,
			            starOff:  '<%= asset_path('star-off.png') %>',
			            starOn : '<%= asset_path('star-on.png') %>',
			            starHalf: '<%= asset_path('star-half.png') %>',
			            half: true,
					    readOnly: true,
					    score: '<%= recipe.reviews.average(:rate).to_f.round(1) %>'
					  });
				  </script>
				  <li><%= recipe.updated_at.strftime("%Y-%m-%d")%>更新</li>
				  <li><%= link_to "#{recipe.reviews.count} 件のコメント", recipe_path(recipe.id) %></li>
			      <li><%= link_to user_path(recipe.user.id) do %>
					<%= recipe.user.name %>さんのページへ</li>
				</ul>
				  <% end %>
			</div>
		</div>
	<% end %>
　</div>
 <%= paginate @recipes %>
</div>